@if (Context.User.Identity.IsAuthenticated) {
    <form asp-controller="Account" asp-action="Logout" method="post" role="form">
        <ul class="nav">
            <li class="nav-item">
                <a class="nav-link" asp-controller="Manage" asp-action="Account" method="get">
                    @Context.User.Identity.Name
                </a>
            </li>
            <li class="nav-item">
                <button type="submit" class="btn btn-outline-primary">
                    Logout
                </button>
            </li>
        </ul>
    </form>
} else {
    <ul class="nav">
        <li class="nav-item">
            <a role="button" class="btn btn-outline-primary" asp-controller="Account" asp-action="Register">
                Register
            </a>
        </li>
        <li class="nav-item">
            <a role="button" class="btn btn-outline-success" asp-controller="Account" asp-action="Login">
                Login
            </a>
        </li>
    </ul>
}