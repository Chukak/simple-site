@model LoginModel
@{
    ViewData["Title"] = "Login";
}
<div>
    <ul>
        <!-- todo -->
    </ul>
</div>
<div class="container">
    <div class="row">
        <section>
            <form class="form-horizontal" asp-controller="Account" method="post" role="form">
                <div class="text-danger" asp-validation-summary="All"></div>
                <div class="form-group">
                    <label class="control-label form-label" asp-for="Username"></label>
                    <div>
                        <input class="form-control form-input" asp-for="Username" />
                        <span class="text-danger" asp-validation-for="Username"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label form-label" asp-for="Password"></label>
                    <div>
                        <input class="form-control form-input" asp-for="Password" />
                        <span class="text-danger" asp-validation-for="Password"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Remember">
                            <input asp-for="Remember" />
                            @Html.DisplayNameFor(m => m.Remember)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button class="btn btn-outline-primary" type="submit">Sign In</button>
                </div>
             </form>
        </section>
    </div>
</div>
