<div class="container">
    <div clas="row">
        <section>
            <form class="form-horizontal" asp-controller="Account" method="post" role="form">
                <div class="text-danger" asp-validation-summary="All"></div>
                <div class="form-group">
                    <label class="control-label form-label" asp-for="Email"></label>
                    <div>
                        <input class="form-control form-input" asp-for="Email" />
