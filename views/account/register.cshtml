                        <input class="form-control form-input" asp-for="Username" />
                        <span class="text-danger" asp-validation-for="Username"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label form-label" asp-for="Password"></label>
                    <div>
                        <input class="form-control form-input" asp-for="Password" />
                        <span class="text-danger" asp-validation-for="Password"></span>
                    </div>
                </div>
                <div class="form-group">
                    <button class="btn btn-default btn-brand" type="submit">Register</button>
                </div>
