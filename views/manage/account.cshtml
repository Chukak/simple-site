@model AccountModel
@{
    ViewData["Title"] = "Account";
}

<div>
    <ul>
        <!-- todo -->
    </ul>
</div>
<div class="container">
    <div class="row">
        <section>
            <form class="form-horizontal" method="get">
                <div class="form-group">
                    <label class="control-label form-label" asp-for="Email"></label>
                    <input class="form-control form-input" asp-for="Email" readonly />
                </div>
                <div class="form-group">
                    <label class="control-label form-label" asp-for="Username"></label>
                    <input class="form-control form-input" asp-for="Username" readonly />
                </div>
                <div class="form-group">
                    <a role="button" class="btn btn-primary" asp-controller="Manage" asp-action="ChangePassword">
                        Change password
                    </a>
                    <a role="button" class="btn btn-primary" asp-controller="Manage" asp-action="ChangeUsername">
                        Change username
                    </a>
                </div>
            </form>
        </section>
    </div>
</div>